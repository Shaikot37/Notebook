<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp">

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/viewPriority"
            android:background="@drawable/green_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20dp"
            android:id="@+id/notesTitle"
            android:maxLines="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:id="@+id/notesSubtitle"
            android:text="Mainshgj djhbjh djhbjh jkbjhbj jhbjhv jhbjh jhbjhbvjh jhbvjhvjhbvjh fjhbjhjhd jhvjh djhjhvd jhvjhvd jhjhdh dhvd dhbjh dhjbjh dhb jh djh "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:id="@+id/notesDate"
            android:textStyle="bold"
            android:text="21 July, 2022"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>